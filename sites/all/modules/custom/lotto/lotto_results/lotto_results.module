function lotto_results_last_available($lottery_name){
    switch($lottery_name){
	case 'lotto_max':
	    break;
	case 'lotto_keno':
	    $last_result = db_select('lotto_keno', 'lk')
		    ->fields('lk')
		    ->orderBy('draw_number', 'DESC')
		    ->range(0,1)
		    ->execute()
		    ->fetchAssoc();
	    break;
    }
    return $last_result;
}

